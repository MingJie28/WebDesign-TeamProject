<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Survey List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/survey/add" class="btn btn-primary"><i class="fa fa-plus"></i> Create a survey</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < survey.length; count++) { %>
                <tr>
                  <td><%= survey[count].Title %></td>
                  <td class="text-center">$<%= survey[count].Price %></td>
                  <td class="text-center"><%= survey[count].Author %></td>
                  <td class="text-center"><%= survey[count].Genre %></td>

                  <td class="text-center">
                  <!-- update button -->
                    <a href="/survey/update/<%= survey[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Update</a>
                  </td>

                  <td class="text-center">
                    <!-- delete button -->
                    <a href="/survey/delete/<%= survey[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>


